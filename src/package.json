{
  "name": "nodejs-demoapp",
  "description": "Simple Node.js Express app for demos",
  "version": "4.5.3",
  "author": "Ben Coleman",
  "engines": {
    "node": ">=12.0.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/benc-uk/nodejs-demoapp.git"
  },
  "private": true,
  "scripts": {
    "start": "node --expose_gc server.js",
    "start-bg": "node server.js &",
    "watch": "nodemon -e ejs",
    "test-junit": "mocha --reporter mocha-junit-reporter --exit ./tests",
    "test": "mocha --exit ./tests",
    "test-postman": "newman run ./tests/postman_collection.json -r junit --timeout 60000 --reporter-junit-export TEST-RESULTS.xml",
    "lint": "eslint ."
  },
  "dependencies": {
    "applicationinsights": "^1.8.7",
    "axios": "^0.21.0",
    "body-parser": "~1.19.0",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.5",
    "express": "~4.17.1",
    "mongodb": "^3.6.2",
    "morgan": "~1.10.0",
    "passport-azure-ad": "^4.3.0",
    "express-session": "^1.17.1"
  },
  "devDependencies": {
    "eslint": "^7.12.1",
    "mocha": "^8.2.0",
    "mocha-junit-reporter": "^2.0.0",
    "newman": "^5.2.0",
    "supertest": "^6.0.0",
    "nodemon": "^2.0.6"
  }
}