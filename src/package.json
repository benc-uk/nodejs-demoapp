{
  "name": "nodejs-demoapp",
  "description": "Node.js Express app for demos",
  "version": "4.8.1",
  "author": "Ben Coleman",
  "engines": {
    "node": ">=14.0.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/benc-uk/nodejs-demoapp.git"
  },
  "private": true,
  "scripts": {
    "start": "node --expose_gc server.js",
    "start-bg": "node server.js &",
    "watch": "nodemon -e ejs",
    "test-report": "mocha --reporter mochawesome --exit ./tests > test-results.json",
    "test": "mocha --exit ./tests",
    "test-postman": "newman run tests/postman_collection.json --timeout 60000 --env-var apphost=$TEST_HOST",
    "lint": "eslint . && prettier --check *.js",
    "lint-fix": "eslint . --fix && prettier --write *.js"
  },
  "dependencies": {
    "@azure/msal-node": "^1.3.3",
    "applicationinsights": "^2.1.8",
    "axios": "^0.24.0",
    "cookie-parser": "^1.4.5",
    "dotenv": "^10.0.0",
    "ejs": "^3.1.6",
    "express": "~4.17.1",
    "express-session": "^1.17.2",
    "mongodb": "^4.1.4",
    "morgan": "~1.10.0"
  },
  "devDependencies": {
    "eslint": "^8.2.0",
    "mocha": "^9.1.3",
    "mochawesome": "^7.0.1",
    "newman": "^5.3.0",
    "nodemon": "^2.0.14",
    "prettier": "^2.4.1",
    "supertest": "^6.1.6"
  }
}
